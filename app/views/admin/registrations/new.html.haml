%h2 Create New Account
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-inputs
    = f.input :name, required: true, autofocus: true, error: flash[:alert]
    = f.input :email, required: true, autofocus: true, error: flash[:alert]
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), error: flash[:alert]
    = f.input :password_confirmation, required: true, error: flash[:alert]
  .form-actions
    = f.button :submit, "Create Account"
    
= link_to "Back", :back