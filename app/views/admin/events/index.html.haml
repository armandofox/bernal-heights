%h1 Unapproved Events

%table#unapproved
  %thead
    %tr
      %th Event Name
      %th More Info
  %tbody
    - @unapproved.each do |event|
      %tr
        %td= event.name
        //%td= link_to "More about #{event.name}", event_path(event)
        %td= button_to "Approve Event",  admin_event_confirm_path(event_id: event.id)

=button_to 'Create New Event', new_admin_event_path, method: :get