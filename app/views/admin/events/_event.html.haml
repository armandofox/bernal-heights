%div{:class => "panel panel-default"}
  %div{:class => "panel-body row"}
    %div{:class => "col-md-8"}
      %h3 #{event.name}
      - if event.end_date
        %p Date: #{event.start_date.to_formatted_s(:long_ordinal)} to #{event.end_date.to_formatted_s(:long_ordinal)}
      - else
        %p Date: #{event.start_date.to_formatted_s(:long_ordinal)}
      - if event.end_time
        %p Time: #{event.start_time.to_s(:time)} to #{event.end_time.to_s(:time)}
      - else
        %p Time: #{event.start_time.to_s(:time)}
      %p Location: #{event.location}
      - if event.event_organizer
        %p Event Organizer: #{event.event_organizer}
      
      - if event.description
        %p #{event.description}
    %div{:class => "pull-right"}
      = link_to admin_event_confirm_path(event_id: event.id), :method => :post, :class=>"btn btn-default btn-lg", :id=> "approve" do
        %span{:class => "glyphicon glyphicon-ok"}
        
      = link_to edit_admin_event_path(event), :class => "btn btn-default btn-lg", :id => "edit" do
        %span{:class => "glyphicon glyphicon-pencil"}
        
      =link_to  event, :method => :delete, :data => { confirm: "Are you sure?" }, :class => "btn btn-default btn-lg", :id => "delete" do
        %span{:class => "glyphicon glyphicon-remove"}
        
    
  %div{:class => "panel-footer"}
    %p Contact Information
    %p #{event.creator_name}: #{event.creator_email}