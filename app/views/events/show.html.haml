%div.full-width
  %div{:class => "col-md-8 container-shadow"}
    %h2 #{@event.name}
    %h4 When
    - if @event.end_date
      %p #{@event.start_date.to_formatted_s(:long_ordinal)} to #{@event.end_date.to_formatted_s(:long_ordinal)}
    - else
      %p #{@event.start_date.to_formatted_s(:long_ordinal)}
    - if @event.end_time
      %p #{@event.start_time.to_s(:time)} to #{@event.end_time.to_s(:time)}
    - else
      %p Time: #{@event.start_time.to_s(:time)}
    %h4 Where
    %p #{@event.location}
    - if @event.event_organizer
      %h4 Organizer
      %p #{@event.event_organizer}
    
    - if @event.description
      %h4 Details
      %p #{@event.description}
      
    %h4 Contact Information
    %p #{@event.creator_name}: #{@event.creator_email}
  
    
    - if admin_signed_in?
      %ul
        %li= link_to "All Events", admin_events_path
        %li= link_to "Submitted Events", admin_unapproved_events_path
    - else
      = link_to "All Events", events_path
  
  - if admin_signed_in?
    %div{:class => "pull-right container-shadow"}
      = render partial: 'layouts/manage_events', locals: {event: @event}
      
