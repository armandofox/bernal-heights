-#  This file is app/views/events/index.html.haml
%h1 All Events

= month_calendar(attribute: :start_date, events: @events) do |date, acts|
  = date
  - acts.each do |event|
    %div
      = event.name

%table#events
  %thead
    %tr
      %th Event Name
      %th More Info
  %tbody
    - @events.each do |event|
      %tr
        %td= event.name
        //%td= link_to "More about #{event.name}", event_path(event)
        %td Show event details will be here

= link_to 'Create new event', new_event_path