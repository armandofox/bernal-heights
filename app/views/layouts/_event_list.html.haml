%table#events{:class => "table table-striped table-condensed "}
  %thead
    %tr
      %th.text-nowrap Event Name
      %th.text-nowrap Date
      %th.text-nowrap Time
  %tbody
    - @todays_events.each do |event|
      %tr
        %td= event.name
        //%td= link_to "More about #{event.name}", event_path(event)
        %td=event.start_date.strftime("%m/%d")
        %td=event.start_time.strftime("%I:%M%p")
