%h1 All Events

= month_calendar(attribute: :start_date, events: @events) do |date, acts|
  = date.mday
  - if acts.length != 0
    %p.event-marker
      = "&bull;".html_safe

%div{:class => "col-md-8"}
  
%table#events{:class => "table table-striped table-condensed "}
  %thead
    %tr
      %th Event Name
      %th More Info
  %tbody
    - @events.each do |event|
      %tr
        %td= event.name
        //%td= link_to "More about #{event.name}", event_path(event)
        %td Show event details will be here

= button_to 'Create New Event', new_event_path, method: :get, class: "btn btn-default"